{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "outDir": "./plugin",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "tmp",
    "typings"
  ],
  "include": [
    "src/tests/**/*.ts",
    "src/**/*.ts",
    "typings/index.d.ts",
  ],
  "files": [
    "./references.d.ts",
  ],
}